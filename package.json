{
  "name": "choosetale-frontend",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "build": "turbo build --filter=./packages/* && turbo build --filter=./apps/*",
    "dev": "turbo dev",
    "game-builder": "turbo dev --filter=game-builder",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^2.0.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
